<header>
  <h1>Booking App</h1>
  <% if(it.user) { %>
    <nav class="user-box">
      <span><%= it.user.username %></span>
      <a href="/account">My Account</a>
      <a href="/logout">Logout</a>
    </nav>
  <% } else { %>
    <nav>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </nav>
  <% } %>
</header>